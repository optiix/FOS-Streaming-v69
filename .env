# FOS-Streaming Secure Configuration
# IMPORTANT: This file should NEVER be committed to version control
# Set file permissions: chmod 600 .env
# Generated automatically by installation script

# Application settings
APP_ENV=production
APP_DEBUG=false
APP_KEY=your_very_secure_key_at_least_32_characters_long_here

# Database settings
DB_HOST=localhost
DB_DATABASE=fos
DB_USERNAME=fos
DB_PASSWORD=your_very_secure_database_password_here
DB_PREFIX=

# FFmpeg paths (adjust for your Debian 12/Pi installation)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Streaming settings
HLS_FOLDER=hl
USER_AGENT=FOS-Streaming-Secure/2.0

# Security settings
SESSION_LIFETIME=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900
CSRF_TOKEN_LIFETIME=3600

# SSL/TLS settings
FORCE_HTTPS=false
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=20

# IP and User Agent blocking
IP_BLOCKING_ENABLED=true
USER_AGENT_BLOCKING_ENABLED=true
AUTO_BLOCK_FAILED_LOGINS=true
AUTO_BLOCK_THRESHOLD=5
AUTO_BLOCK_DURATION=3600

# Geographic restrictions
GEO_BLOCKING_ENABLED=false
ALLOWED_COUNTRIES=
BLOCKED_COUNTRIES=

# Logging
LOG_LEVEL=warning
LOG_FILE=/var/log/fos-streaming/app.log
LOG_MAX_SIZE=10M
LOG_ROTATE_DAYS=30

# Performance settings
MAX_CONCURRENT_STREAMS=10
STREAM_TIMEOUT=30
CONNECTION_TIMEOUT=15
MEMORY_LIMIT=512M

# Cache settings
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600

# Backup settings
BACKUP_ENABLED=true
BACKUP_PATH=/var/backups/fos-streaming
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily

# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
MONITORING_ENABLED=true

# SMTP settings (for notifications)
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@localhost
MAIL_FROM_NAME="FOS Streaming System"

# File upload limits
MAX_UPLOAD_SIZE=50M
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,gif,mp4,avi,mkv,m3u8

# Session security
SESSION_DRIVER=file
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# API settings
API_ENABLED=false
API_RATE_LIMIT=60
API_TOKEN_LIFETIME=3600

# Development/Debug (only for non-production)
QUERY_LOG_ENABLED=false
SLOW_QUERY_LOG=false
DEBUG_BAR_ENABLED=false

# Timezone
APP_TIMEZONE=UTC

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress"

# Features toggle
TRANSCODING_ENABLED=true
PROXY_MODE_ENABLED=true
PLAYLIST_IMPORT_ENABLED=true
USER_REGISTRATION_ENABLED=false
