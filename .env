# FOS-Streaming Säker Konfiguration
# VIKTIGT: Denna fil ska ALDRIG committas till version control
# Sätt filbehörigheter: chmod 600 .env

# Applikationsinställningar
APP_ENV=production
APP_DEBUG=false
APP_KEY=din_mycket_säkra_nyckel_minst_32_tecken_lång_här

# Databasinställningar
DB_HOST=localhost
DB_DATABASE=fos_streaming_db
DB_USERNAME=fos_db_user
DB_PASSWORD=ditt_mycket_säkra_databaslösenord_här
DB_PREFIX=

# FFmpeg sökvägar (anpassa efter din Debian 12 installation)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Streaming-inställningar
HLS_FOLDER=hls
USER_AGENT=FOS-Streaming-Secure/2.0

# Säkerhetsinställningar
SESSION_LIFETIME=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900

# SSL/TLS inställningar
FORCE_HTTPS=true
SECURE_COOKIES=true

# Loggning
LOG_LEVEL=warning
LOG_FILE=/var/log/fos-streaming/app.log

# SMTP-inställningar (för notifikationer)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=notifications@example.com
MAIL_PASSWORD=ditt_smtp_lösenord
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=notifications@example.com
MAIL_FROM_NAME="FOS Streaming System"

# Backup-inställningar
BACKUP_ENABLED=true
BACKUP_PATH=/home/fos-streaming/backups
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
